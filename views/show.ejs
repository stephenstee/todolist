<%- include("partials/header")%>
<style>
	.container{
			box-sizing:border-box;
	}
	.card{
	
		margin:30px auto;
	}
	#li{
      list-style-type:none;
		border-bottom:2px;
		border-bottom-color:grey;
		border-bottom-style: outset;
	
	}
	/* #box{
		margin:0 auto;
	} */ 
</style>
<div class="container">
<div class="row">
	<div class="col-md-12 col-sm-12">
	<% if(currentUser && task.author.id.equals(currentUser._id) ){ %>
		
<div class="card border-dark mb-3" style="max-width: 40rem;">
	<a href="/home/<%=task._id%>/edit" class="btn btn-outline-dark btn-md btn-block ">Edit</a>
	<form action="/home/<%=task._id%>?_method=DELETE" method="POST">
	 <button class="btn btn-outline-danger btn-md btn-block" style="font-size:20px;" ><svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-trash" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
  <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
  <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4L4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
</svg></button>
	</form>
	<div class="card-header bg-dark text-white border-dark text-center text-uppercase" style="font-size:40px;font-weight:normal;"><%= task.title %></div>
  <div class="card-body text-dark py-5">
    <p class="card-text" style="font-size:20px;font-weight:normal;"><%=task.text %></p>
	</div>
	  <a href="/home/<%=task._id%>/comment/new" style="font-size:20px;font-weight:normal;" class="card-footer bg-light border-dark text-dark"><svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-pencil-square" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
  <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456l-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
  <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
</svg> Add SubTask</a>
<% } %>
<% task.subtext.forEach(function(comment){ %>
<ul id="li"><li style="font-size:20px;font-weight:normal;"><%=comment.text%></li>
	<form action="/home/<%=task.id%>/comment/<%=comment.id%>?_method=DELETE" method="POST" >
		<button class="btn btn-outline-danger" style="float:right;"><svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-trash" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
  <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
  <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4L4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
</svg></button>
	</form>
	</ul>
<% }) %>
	</div>
</div>
</div>
<%- include("partials/footer")%>
